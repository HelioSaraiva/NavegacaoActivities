<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ExercícioNavegaçãoActivities" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaria</item>
        <item name="colorPrimaryVariant">@color/primaria_variacao</item>
        <item name="colorOnPrimary">@color/branco</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundaria</item>
        <item name="colorSecondaryVariant">@color/secundaria</item>
        <item name="colorOnSecondary">@color/preto</item>
        <!-- Status bar color. (aquela barra superior do Android que mostra hora, bateria etc.) vai usar a cor definida no atributo colorPrimaryVariant do tema atual. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- customizando interface netflix -->
        <item name="android:windowBackground">@color/fundo</item>
    </style>

    <style name="Theme.ExercícioNavegaçãoActivities" parent="Base.Theme.ExercícioNavegaçãoActivities" />
</resources>